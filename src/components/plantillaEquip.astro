---
import Header from './header.astro';

interface Props {
    title?: string,
    numEquipo?: string,
    integrante1?:string,
    integrante2?:string,
    integrante3?:string,
    integrante4?:string,
    integrante5?:string,
    integrante6?:string,
    integrante7?:string,
}
const { numEquipo, title, integrante1, integrante2, integrante3, integrante4, integrante5, integrante6,integrante7} = Astro.props;
---

<html>
<head>
    <meta charset="UTF-8">
    <link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Teko:wght@300..700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.css">
  <title>Equipo {numEquipo}</title>
</head>
<body>
    <Header/>
  <h1 id="Equipo">Equipo {numEquipo}</h1>
  <h2>{title}</h2>
  <div class="row">
      <div class="box">
          <h2>Integrantes</h2>
          <ul>
              <li>{integrante1}</li>
              <li>{integrante2}</li>
              <li>{integrante3}</li>
              <li>{integrante4}</li>
              <li>{integrante5}</li>
              <li>{integrante6}</li>
              <li>{integrante7}</li>
            </ul>
        </div>
    </div>
    <h1>Presentacion</h1>
    <div class="row fullScreen">
        <iframe src={`/Equipo ${numEquipo} - Presentacion.pdf`} style="width:90%; height:90%;" frameborder="0"></iframe>
    </div>
    <h1>Video</h1>
    <div class="row videoContainer">
        <video controls>
            <source src={`/equipo${numEquipo}.mp4`} type="video/mp4">
            Tu navegador no soporta videos HTML5.
        </video>
    </div>
</body>
<style>
    ul{
      list-style: none;  
      padding: 0;
      font-size: 2em;
    }
    h1{
        font-size: 7em;
        margin: 0;
    }
    #Equipo{
        margin-top: 1em;
    }
    h2{
        margin: 0;
        margin-bottom: 20px;
        font-size: 4em;
        text-align: center;
    }
    body {
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow-x: hidden;
    color: white;
    background: linear-gradient(270deg, rgb(126, 173, 255), #86ffc6);
        background-size: 1200% 1200%;
        animation: Gradient 5s ease infinite;
    }
    @keyframes Gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.row {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%; /* Opcional: hace que .row ocupe el ancho completo */
}

.box {
    padding: 20px;
    margin: 0 100px;
    box-shadow: 3px 3px 10px rgb(38, 126, 167);
    border-radius: 10px;
    width: 600px; /* Corregido */
    margin-bottom: 50px;
    background: rgba(167, 242, 255, 0.572);
}
   
    .fullScreen{
        width: 100vw;
        height: 100vh;
        background: rgb(162, 255, 240);
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .fullScreen iframe {
    width: 100%;
    height: 100%;
    border: none; /* Elimina el borde del iframe */
}
.videoContainer {
    width: 100%; /* Ajusta el ancho al 100% del contenedor padre */
    padding: 20px 0;
    display: flex;
    justify-content: center; /* Centra el video horizontalmente */
    align-items: center; /* Centra el video verticalmente */
}

.videoContainer video {
    width: 90%; /* Hace que el video ocupe el 90% del contenedor */
    max-width: 1600px; /* Asegura que el video no se vuelva demasiado grande */
    height: auto; /* Mantiene la proporci√≥n del video */
    border-radius: 10px;
}
</style>
</html>
---
import Creadores from "../components/creadores.astro"
---
<div class="center" id="fotos">
    <div class="image-slider">
        <img src="Grupo1.jpg" alt="Imagen1" >
        <img src="Grupo2.jpg" alt="Imagen2" >
        <img src="Grupo3.jpg" alt="Imagen3" >
        <img src="Grupo4.jpg" alt="Imagen4" >
    </div>
</div>
<Creadores/>

<style>
    .center{
        display: flex;
        justify-content: center;
        padding: 20px 0;
    }
  .image-slider {
    position: relative;
    width: 1600px;  /* Ajusta al tamaño deseado */
    height: 1060px; /* Ajusta al tamaño deseado */
    overflow: hidden;
    border-radius: 20px;
}

.image-slider img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    animation: fadeInOut 16s infinite; /* Duración ajustada para ciclos completos */
    z-index: 500;
}
    @media (max-width: 1800px) {
		.image-slider{
			width: 1400px;  /* Ajusta al tamaño deseado */
            height: 900px; 
		}
    }
    
    @media (max-width: 1600px) {
		.image-slider{
			width: 1100px;  /* Ajusta al tamaño deseado */
            height: 600px; 
		}
    }
    @media (max-width: 1200px) {
		.image-slider{
			width: 900px;  /* Ajusta al tamaño deseado */
            height: 440px; 
		}
    }
/* Animaciones específicas para cada imagen */
.image-slider img:nth-child(1) {
    animation-delay: 0s; /* Comienza de inmediato */
}
.image-slider img:nth-child(2) {
    animation-delay: 4s; /* Empieza después de que la primera imagen complete su ciclo */
}
.image-slider img:nth-child(3) {
    animation-delay: 8s; /* Empieza después de que la segunda imagen complete su ciclo */
}
.image-slider img:nth-child(4) {
    animation-delay: 12s; /* Empieza después de que la tercera imagen complete su ciclo */
}

@keyframes fadeInOut {
    0%, 100% { opacity: 0; }
    25%, 75% { opacity: 1; } /* Cada imagen se muestra claramente durante un tiempo */
}
</style>
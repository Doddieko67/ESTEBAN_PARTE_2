---
const numbers = [];

for(let i = 1; i <= 10; i++){
    numbers.push(i);
}
---
<section class ="presen" id="presentacion">
    <h2>Presentaciones y videos</h2>
    <div class="row">
        <ul>
            {numbers.map(i => (
                <li data-aos="fade-up" data-aos-anchor-placement="center-bottom"><a href={`./DiapVid/equipo${i}`}>Equipo {i}</a></li>
            ))}
        </ul>
    </div>
</section>
<style>
    section{
        color: rgb(255, 255, 255);
        text-shadow: 2px 2px 4px rgb(243, 2, 2);
        list-style: none;
        text-decoration: none;
    }
    a{
        text-decoration: none;
        color: rgb(255, 189, 189);
        transition: all 0.5s ease-in;
    }
    li{
        padding: 5px;
        margin: 0;
        transition: all 0.5s ease-in-out;
        border-radius: 20px;
    }
    .presen{
    padding: 20px 20px;
    background: linear-gradient(270deg, rgb(255, 126, 126), #ffa070);
        background-size: 1200% 1200%;
        animation: Gradient 5s ease infinite;
    }
    @keyframes Gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}
    .presen h2 {
    font-size: 7em;
    margin: 0px;
    text-shadow: none;
    }
    .row{
        background-color: rgba(136, 86, 29, 0);
        margin: 20px;
    }
    ul{
        display: flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
        flex-direction: row;
        gap: 0.5em;
        margin: 0 20px;
        list-style: none;
        padding: 0;
        font-size: 7em;
    }
    li:hover{
        background: rgba(191, 0, 0, 0.49);
        cursor: pointer;
        scale: 1.1 1.1;
    }
    li:hover a{
        color:white
    }
</style>
<script>
    import AOS from 'aos';
    AOS.init();
</script>